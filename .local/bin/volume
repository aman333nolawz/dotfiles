#!/usr/bin/env bash

ICONS_FOLDER="$HOME/.config/swaync/icons"

# Get Volume
get_volume() {
  volume=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d" " -f2)
  volume=$(python -c "print(round(100*${volume}))")
  echo "$volume"
}

# Get icons
get_icon() {
  vol="$(get_volume)"
  current="${vol%%%}"
  current=$((current))
  if [[ ($current -ge 60) ]]; then
    icon="$ICONS_FOLDER/volume-high.svg"
  elif [[ ($current -ge 30) && ($current -le 60) ]]; then
    icon="$ICONS_FOLDER/volume-medium.svg"
  elif [[ ($current -ge 0) && ($current -le 30) ]]; then
    icon="$ICONS_FOLDER/volume-low.svg"
  elif [[ ($current -ge 0) ]]; then
    icon="$ICONS_FOLDER/volume-muted.svg"
  fi
}

# Increase brightness
inc_volume() {
  wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+&& get_icon && notify-send -u low -h string:synchronous:my-progress -i "$icon" -h int:value:$(get_volume) "$(get_volume)%"
}

# Decrease brightness
dec_volume() {
  wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && get_icon && notify-send -u low -h string:synchronous:my-progress -i "$icon" -h int:value:$(get_volume) "$(get_volume)%"
}

toggle_mute() {
  status=`pactl get-sink-mute @DEFAULT_SINK@ | grep -wo 'yes'`

  if [[ "$status" == "yes" ]]; then
    wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && get_icon && notify-send -u low -h string:synchronous:my-progress -i "$icon" "Unmute"
  else
    wpctl set-mute @DEFAULT_AUDIO_SINK@ 1 && icon="$ICONS_FOLDER/volume-muted.svg" && notify-send -u low -h string:synchronous:my-progress -i "$icon" "Mute"
 fi
}

# Execute accordingly
if [[ "$1" == "--get" ]]; then
  get_volume
elif [[ "$1" == "--inc" ]]; then
  inc_volume
elif [[ "$1" == "--dec" ]]; then
  dec_volume
elif [[ "$1" == "--toggle" ]]; then
  toggle_mute
else
  get_volume
fi

