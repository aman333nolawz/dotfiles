set icons
set shellopts '-eu'

set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Custom Functions
cmd extract ${{
    set -f
    atool -x $f
}}

cmd mkdir %IFS=" "; mkdir -p -- "$*"
cmd touch %IFS=" "; touch -- "$*"

cmd setwallpaper ${{
    nitrogen --save --set-auto $f
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# Unmap some default mappings
map d
map m
map c

# Compression
map cz push :zip<space>
map ct push :tar<space>
map au extract

# Basic functions
map x cut
map C clear
map dd delete
map <delete> delete
map <enter> open
map mf push :touch<space>
map md push :mkdir<space>
map bg setwallpaper

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gv cd ~/Videos
map gs cd ~/.local/bin
