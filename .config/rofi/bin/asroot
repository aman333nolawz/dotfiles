DIR="$HOME/.config"
rofi_cmd="rofi -theme $DIR/rofi/config/asroot.rasi"

# Apps
terminal=" Terminal"
files=" File Manager"
editor=" Text Editor"
clifm=" CLI File Manager"
vim=" Neovim"

# Variable passed to rofi
options="$terminal\n$files\n$editor\n$clifm\n$vim"
term='kitty --class terminal-float'

# Functions

chosen="$(echo -e "$options" | $rofi_cmd -p "Run apps as root" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        bsproot "$term"
        ;;
    $files)
        bsproot 'dbus-run-session thunar'
        ;;
    $editor)
        bsproot "$EDITOR"
        ;;
    $clifm)
        bsproot "$term --title 'LF' lf"
        ;;
    $vim)
        bsproot "$term --title 'neovim' nvim"
        ;;
esac
