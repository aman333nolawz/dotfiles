@import "colors.rasi"

* {
  background-color: @base;
  text-color: @text;
  font-family: "CaskaydiaCove Nerd Font";
}

window {
  width: 225px;
  padding: 20px;
  border: 0px 0px 2px 0px;
  border-radius: 8px;
  border-color: @accent;
  location: 0;
  x-offset: 0;
  y-offset: -4%;
}

entry {
  expand: true;
  width: 210px;
  text-color: @accent;
}
